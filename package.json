{
  "name": "vscode-core-script",
  "displayName": "vscode-core-script",
  "description": "",
  "version": "0.0.1",
  "publisher": "wennmo",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:qlikDocs",
    "onCommand:extension.checkScriptSyntax",
    "onCommand:extension.validateModel",
    "onCommand:qlikDocs.getScript"
  ],
  "main": "./src/extension",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "core-script",
          "title": "Qlik Associative Engine",
          "icon": "resources/qlik.svg"
        }
      ]
    },
    "views": {
      "core-script": [
        {
          "id": "qlikDocs",
          "name": "Apps"
        }
      ]
    },
    "commands": [
      {
        "command": "qlikDocs.addDoc",
        "title": "Create new app",
        "icon": {
          "light": "resources/light/add.svg",
          "dark": "resources/dark/add.svg"
        }
      },
      {
        "command": "qlikDocs.refresh",
        "title": "Refresh app list",
        "icon": {
          "light": "resources/light/refresh.svg",
          "dark": "resources/dark/refresh.svg"
        }
      },
      {
        "command": "qlikDocs.getScript",
        "title": "Get loadscript"
      },
      {
        "command": "qlikDocs.setScript",
        "title": "Set loadscript"
      },
      {
        "command": "extension.checkScriptSyntax",
        "title": "Checks the syntax of QAE script"
      },
      {
        "command": "extension.validateModel",
        "title": "Show the data model using Catwalk"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "qlikDocs.addDoc",
          "when": "view == qlikDocs",
          "group": "navigation@0"
        },
        {
          "command": "qlikDocs.refresh",
          "when": "view == qlikDocs",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "qlikDocs.getScript",
          "when": "view == qlikDocs && viewItem == app"
        },
        {
          "command": "qlikDocs.setScript",
          "when": "view == qlikDocs && viewItem == app"
        }
      ]
    },
    "keybindings": [
      {
        "command": "extension.checkScriptSyntax",
        "key": "ctrl+alt+o",
        "when": "editorTextFocus && resourceExtname == .qvs"
      },
      {
        "command": "extension.checkScriptSyntax",
        "key": "ctrl+s",
        "when": "editorTextFocus && resourceExtname == .qvs"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QIX engine configuration",
      "properties": {
        "engine.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host name for the QIX Engine"
        },
        "engine.port": {
          "type": [
            "string",
            "number"
          ],
          "default": 9076,
          "description": "Port for the QIX Engine"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src"
  },
  "devDependencies": {
    "@types/mocha": "2.2.42",
    "@types/node": "8.10.25",
    "eslint": "5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "typescript": "2.6.1",
    "vscode": "1.1.21"
  },
  "dependencies": {
    "enigma.js": "2.3.0",
    "ws": "6.1.0"
  }
}
