{
  "name": "vscode-core-script",
  "displayName": "vscode-core-script",
  "description": "",
  "version": "0.0.1",
  "publisher": "wennmo",
  "engines": {
    "vscode": "^1.28.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:extension.checkScriptSyntax",
    "onCommand:extension.validateModel"
  ],
  "main": "./src/extension",
  "contributes": {
    "commands": [
      {
        "command": "extension.checkScriptSyntax",
        "title": "Checks the syntax of QAE script"
      },
      {
        "command": "extension.validateModel",
        "title": "Show the data model using Catwalk"
      }
    ],
    "keybindings": [
      {
        "command": "extension.checkScriptSyntax",
        "key": "ctrl+alt+o",
        "when": "editorTextFocus && resourceExtname == .qvs"
      },
      {
        "command": "extension.checkScriptSyntax",
        "key": "ctrl+s",
        "when": "editorTextFocus && resourceExtname == .qvs"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "QIX engine configuration",
      "properties": {
        "engine.host": {
          "type": "string",
          "default": "localhost",
          "description": "Host name for the QIX Engine"
        },
        "engine.port": {
          "type": [
            "string",
            "number"
          ],
          "default": 9076,
          "description": "Port for the QIX Engine"
        }
      }
    }
  },
  "scripts": {
    "postinstall": "node ./node_modules/vscode/bin/install",
    "test": "node ./node_modules/vscode/bin/test",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src"
  },
  "devDependencies": {
    "@types/mocha": "2.2.42",
    "@types/node": "8.10.25",
    "eslint": "5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "typescript": "2.6.1",
    "vscode": "1.1.21"
  },
  "dependencies": {
    "enigma.js": "2.3.0",
    "ws": "6.1.0"
  }
}
